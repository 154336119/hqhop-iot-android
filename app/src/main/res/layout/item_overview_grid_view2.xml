<?xml version="1.0" encoding="utf-8"?><!-- 导航-总览 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="30dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_station_overview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_gasonline_station" />

        <ImageView
            android:id="@+id/iv_alarm_overview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@id/iv_station_overview"
            android:src="@drawable/ic_alarm"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="13sp"

            android:textColor="@color/colorTextOverviewTitle"
            tools:text="LNG站" />

        <LinearLayout
            android:id="@+id/container_data_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/tv_online_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOverviewOnline"
                android:textSize="11sp"
                tools:text="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_total_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="100" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>