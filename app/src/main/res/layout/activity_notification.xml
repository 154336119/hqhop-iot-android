<?xml version="1.0" encoding="utf-8"?><!-- 导航模块通知页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.hqhop.www.iot.activities.main.workbench.notification.NotificationActivity">

    <include layout="@layout/layout_toolbar_with_title" />

    <ListView
        android:id="@+id/listview_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:cacheColorHint="@color/transparent" />

</LinearLayout>
