<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:allen="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar_with_title"/>

        <View
            android:id="@+id/view_base_popupwindow_workbench"
            android:layout_width="1px"
            android:layout_height="0px"
            android:layout_gravity="right"/>
    </LinearLayout>

    <!-- 总览 -->
    <com.hqhop.www.iot.base.view.GridViewTwoRowsInScrollView
        android:id="@+id/gridview_overview_workbench"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:stretchMode="columnWidth"
        android:visibility="gone"
        allen:showDividerLine="false"/>

    <RelativeLayout
        android:id="@+id/container_single_station_workbench"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_single_title_workbench"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avatar_gas_type"/>

        <TextView
            android:id="@+id/tv_station_single_station_workbench"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/iv_single_title_workbench"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_gasify_title_workbench"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="气化站"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_station_single_station_workbench"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_online_single_station_workbench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#37a3da"/>

            <TextView
                android:id="@+id/tv_total_single_station_workbench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#37a3da"
                tools:text="56"/>
        </LinearLayout>
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout_workbench"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadmore="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_events_workbench"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_business_title"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_events_workbench"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/up_to_date_events"
                    android:textColor="@color/colorTextTypeTitle"/>

                <Spinner
                    android:id="@+id/spinner_events_type_workbench"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:entries="@array/sort_type_all_events"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_status_events_workbench"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/more"
                    android:textColor="@color/colorTextTypeMore"
                    android:textSize="12sp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_status_events_workbench"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    allen:srcCompat="@drawable/ic_arrow_right"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backgroundActivity"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/backgroundActivity"-->
                <!--android:orientation="vertical">-->

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/backgroundActivity"-->
                <!--android:orientation="vertical">-->
                <!-- 事件列表容器 -->
                <LinearLayout
                    android:id="@+id/container_events_workbench"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundActivity"
                    android:orientation="vertical">

                    <com.hqhop.www.iot.base.view.GridViewInScrollView
                        android:id="@+id/gridview_events_workbench"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:numColumns="1"
                        android:stretchMode="columnWidth"/>

                    <include
                        android:id="@+id/container_no_data_workbench"
                        layout="@layout/layout_empty"/>

                    <!-- 暂无数据 -->
                    <!--<RelativeLayout-->
                    <!--android:id="@+id/container_no_data_workbench"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="70dp"-->
                    <!--android:background="@color/white"-->
                    <!--android:visibility="gone">-->

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:text="暂无数据"-->
                    <!--android:textSize="16sp" />-->
                    <!--</RelativeLayout>-->
                </LinearLayout>
                <!--</LinearLayout>-->
                <!--</LinearLayout>-->
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>